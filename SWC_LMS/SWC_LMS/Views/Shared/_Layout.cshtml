@using Microsoft.Ajax.Utilities
@{
    int Id = 0;
    string Prefix = "Home";
    if (ViewBag.adminString != null)
    {
        Prefix = ViewBag.adminString;
    }
    else if (ViewBag.teacherId != null)
    {
        Id = ViewBag.teacherId;
        Prefix = ViewBag.teacherString;
    }
    else if (ViewBag.studnetId != null)
    {
        Id = ViewBag.studentId;
        Prefix = ViewBag.studentString;
    }
    else if (ViewBag.parentId != null)
    {
        Id = ViewBag.parentId;
        Prefix = ViewBag.parentString;
    }

}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@*@ViewBag.Title-*@Jamin fix Me</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/custom/Layout.css")">
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("Styles",false)
</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top row">
   
    <div class="container">
        
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        <div class="navbar-collapse collapse">
            <img src="http://www.logotypes101.com/logos/43/F372DE3BC90BAEC1BA25CC22C71E532F/Teachers.png" style="width:100px;height:50px; float: left">
            <ul class="nav navbar-nav" style="padding-left: 100px; position: static">
                <li>@Html.ActionLink("Home", "Login", "User")</li>
                <li>@Html.ActionLink("DashBoard", Prefix + "Dashboard", new {id = Id})</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</div>
    <div class="container body-content">
        @RenderBody()

        <footer>
            <hr />
            <p>&copy; @DateTime.Now.Year - SWC Learning Management Sytem</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
