@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <img src="@Model.ImageUrl" alt="A car" class="car-image" />
        </div>
        <div class="col-md-8">
            <div>
                @Model.Description
            </div>
            <h1>ONLY @string.Format("{0:C}", Model.Price)</h1>
        </div>
        <h3>Delete this car entry?</h3>
        <div>
            @using (Html.BeginForm("DeleteCar", "Car", new { id = Model.Id }))
            {
                <button>Yes</button>
            }
            @using (Html.BeginForm("Index", "Car", new { id = Model.Id }))
            {
                <button>no</button>
            }
        </div>
    </div>
</div>

